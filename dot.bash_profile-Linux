#
#	Only for Linux
#

decho "$HOME/.bash_profile-Linux"

#
#	Vars
#
export PATH="/snap/bin:$PATH"

export NCPU=$(grep "cpu family" /proc/cpuinfo  2>&- | wc -l )

# Commands
export _DD=dd

# Dev
export CC=clang

# Fix gnome slow issues
export QT_QPA_PLATFORMTHEME=gtk2

# aliases
alias ls="ls --color=auto"

