[rerere]
enabled = 1
autoupdate = 1

[alias]
s = status
st = status
sb = status -s -b
cp = cherry-pick
#############
clean-all = clean -fdx
#############
sa = stash apply
sc = stash clear
sd = stash drop
sl = stash list
sp = stash pop
ss = stash save
#############
d = diff
df = diff
dfh = diff HEAD
dc = diff --cached
dk = diff --check
dck = diff --cached --check
#############
c = commit
ci = commit
ca = commit -a
cm = commit -m
cam = commit -am
cd = commit --amend
cad = commit -a --amend
#############
a = add .
#############
ap = apply
as = apply --stat
ac = apply --check
#############
l = log --oneline
lg = log --oneline --graph --decorate
ld = log --pretty=format:\"[%h] %ae, %ar: %s\" --stat
ll = log --graph --decorate --simplify-by-decoration
chlogm =  !sh -c 'git log $1...$2  --pretty=format:\"%s [view commit](http://github.com/$3/$4/commit/%H)\"'

# FreeRadius
fr-chlogm =  !sh -c 'git log $1...$2  --pretty=format:\"%s [view commit](http://github.com/freeradius/freeradius-server/commit/%H)\"'
#############
o = checkout
co = checkout
ob = checkout -b
#############
b = branch
ba = branch -a
bd = branch -d
br = branch -r
#############
f = fetch
fo = fetch origin
fa = fetch --all -pn
#############
fp = format-patch
#############
fk = fsck
#############
m = merge
#############
#pr = prune -v
#############
ps = push
pso = push origin
psof = push origin -f
pl = pull
pr = pull --rebase
psf = push -f
psu = push -u
plu = pull -u
pso = push origin
plo = pull origin
pro = pull --rebase origin
pru = pull --rebase upstream
prum = pull --rebase upstream master
pruv3 = pull --rebase upstream v3.0.x
psfo = push -f origin
psuo = push -u origin
pluo = pull -u origin
#############
rb = rebase
rb-squash-by-id = rebase -i --autosquash
#############
re = reset
rh = reset HEAD
rh1 = reset HEAD^1
undo = reset HEAD^1
reh = reset --hard
rem = reset --mixed
res = reset --soft
rehh = reset --hard HEAD
remh = reset --mixed HEAD
resh = reset --soft HEAD
#############
r = remote
ra = remote add
rm = remote rm
rv = remote -v
rp = remote prune
rs = remote show
rso = remote show origin
rpo = remote prune origin
#############
w = show
#############
meldon = config diff.external ~/bin/meld-git.py
meldof = config --remove-section diff
#############
human = name-rev --name-only --refs=refs/heads/*

[color]
ui = true

[color "branch"]
current = yellow bold
local = green bold
remote = cyan bold

[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold
whitespace = red reverse

[color "status"]
added = green bold
changed = yellow bold
untracked = red bold
[rebase]
autosquash = true

